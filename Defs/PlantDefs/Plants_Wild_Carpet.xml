<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<ThingDef ParentName="PlantBase">
		<defName>GrazelandGrass</defName>
		<label>grass</label>
		<description>Grazeland grasses are tenacious and thick.</description>
		
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<graphicData>
<!--			<texPath>Plants/Background/Mushrooms</texPath>-->
			<texPath>Plants/Carpet/GrazelandGrass</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
		</statBases>
		
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>2.5</growDays>
			<topWindExposure>0.3</topWindExposure>
			
			<maxMeshCount>16</maxMeshCount>
			<visualSizeRange>
				<min>0.5</min>
				<max>0.8</max>
			</visualSizeRange>
			<leaflessGraphicPath>Plants/Carpet/GrazelandGrass</leaflessGraphicPath>

			<harvestWork>40</harvestWork>
			<reproduceMtbDays>3</reproduceMtbDays>
		</plant>
		
		<ingestible>
			<nutrition>0.18</nutrition>
		</ingestible>
	</ThingDef>

