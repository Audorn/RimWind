<?xml version="1.0" encoding="utf-8" ?>

<Defs>

		<ThingDef ParentName="PlantBase">
		<defName>PlantWickwheat</defName> 
		<label>wickwheat</label>
		<description>Wickwheat is a wild Ashland grain with modest magical properties that grows in the Grazelands.</description>

		<graphicData>
			<texPath>Plants/Small/Wickwheat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<pathCost>10</pathCost>

		<selectable>true</selectable>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
		</statBases>
		
		<plant>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<growDays>3.6</growDays>
			<topWindExposure>0.3</topWindExposure>

			<visualSizeRange>
				<min>0.3</min>
				<max>0.8</max>
			</visualSizeRange>
			<immatureGraphicPath>Plants/Small/Wickwheat_Immature</immatureGraphicPath>
			<maxMeshCount>4</maxMeshCount>

			<sowWork>250</sowWork>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			
			<harvestTag>Standard</harvestTag>
			<harvestFailable>true</harvestFailable>
			<harvestMinGrowth>0.80</harvestMinGrowth>
			<harvestWork>300</harvestWork>
			<harvestedThingDef>RawWickwheatGrain</harvestedThingDef>
			<harvestYield>25</harvestYield>
			<dieIfLeafless>true</dieIfLeafless>
			<reproduces>false</reproduces>
		</plant>
		
		<ingestible>
			<nutrition>0.2</nutrition>
		</ingestible>		
	</ThingDef>
	
	<ThingDef ParentName="PlantBase">
		<defName>PlantSaltrice</defName> 
		<label>saltrice</label>
		<description>Saltrice is another of the tasty and nutritious foodstuffs with modest magical properties raised as export crops by Morrowind's farmers and plantation owners. Most saltrice seen in the Empire comes from southeastern Morrowind, but there are also some new and prospering farms and plantations in the Ascadian Isles. Saltrice also grows wild in the Grazelands and on Azura's Coast.</description>

		<graphicData>
			<texPath>Plants/Small/Saltrice</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<pathCost>10</pathCost>

		<selectable>true</selectable>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
		</statBases>
		
		<plant>
			<fertilitySensitivity>1</fertilitySensitivity>
			<growDays>3</growDays>
			<topWindExposure>0.1</topWindExposure> 

			<visualSizeRange>
				<min>0.4</min>
				<max>1.0</max>
			</visualSizeRange>
			<immatureGraphicPath>Plants/Small/Saltrice_Immature</immatureGraphicPath>
			<maxMeshCount>4</maxMeshCount>

			<sowMinSkill>4</sowMinSkill>
			<sowWork>350</sowWork>
			<sowTags>
				<li>Ground</li>
			</sowTags>

			<harvestTag>Standard</harvestTag>
			<harvestFailable>true</harvestFailable>
			<harvestMinGrowth>0.80</harvestMinGrowth>
			<harvestWork>500</harvestWork>
			<harvestedThingDef>RawSaltriceGrain</harvestedThingDef>
			<harvestYield>10</harvestYield>
			<dieIfLeafless>false</dieIfLeafless>
			<reproduceMtbDays>5</reproduceMtbDays>
			<reproduceRadius>12</reproduceRadius>
		</plant>
		
		<ingestible>
			<nutrition>0.2</nutrition>
		</ingestible>		
	</ThingDef>
	
</Defs>